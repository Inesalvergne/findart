<div class="container-header-artpieces">
  <div class="header-center">
    <h2> Explore the most beautiful artworks available to rent.</h2>
    <p> FindArt has an extensive selection of artworks. From the most popular artist to rare pieces you could only find here. Browse our collection and select what appeals you the most! </p>
        <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Add an Artwork
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"> Put your own artworks for rent </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= simple_form_for(@artpiece) do |f| %>
            <%= f.input :title %>
            <%= f.input :artist %>
            <%= f.input :cloud_image, as: :file %>
            <%= f.input :description %>
            <%= f.input :creation_date %>
            <%= f.input :category %>
            <%= f.input :style %>
            <%= f.input :address %>
            <%= f.input :price_rate %>
            <%= f.submit 'Create Art Piece', class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container-home-cards">
  <%= render "shared/cards" %>
</div>
