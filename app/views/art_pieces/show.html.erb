
<div class="container-show-artpiece">

    <div class="wrapper-show-img">
    <% if @artpiece.cloud_image.present? %>
      <%= cl_image_tag @artpiece.cloud_image.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <%= image_tag "dummy-painting.jpg" %>
    <% end %>
    </div>

    <div class="wrapper-show-description">

      <h2> <%= @artpiece.title %> </h2>
      <p> By <%= @artpiece.artist %> </p>
      <p> <%= @artpiece.description %> </p>
      <p class= "btn btn-info rounded-3"> <%= @artpiece.category %> </p>
      <p class= "btn btn-info rounded-3"><%= @artpiece.style %></p>
      <p id= "price"> Rent it for <span>$<%= @artpiece.price_rate %> </span>a day </p>

      <div class="wrapper-booking-form">
        <hr>
        <h3> Book this artwork</h3>
        <%= simple_form_for [ @artpiece, @offer ] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.submit "Send a request", class: "btn btn-primary" %>
        <% end %>
      </div>

    </div>

</div>


<div class="container-owner-card">

  <h2> About the owner </h2>

  <div class="container-owner-info">

    <div class="avatar">
        <%= image_tag "https://abs.twimg.com/sticky/default_profile_images/default_profile_400x400.png" , alt: "Avatar image" , class: "avatar" %>
    </div>
    <div class= "owner-bio">
      <p><%= "#{@artpiece.user.first_name} #{@artpiece.user.last_name}" %></p>
